{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": ["react", "jsx-a11y", "import"],
  
  "rules": {
    "react/jsx-filename-extension": [
      "error",
      {"extensions": [".js", ".jsx"]}
    ],
    "import/prefer-default-export": "off",
    "react/static-property-placement": ["<enabled>"]  // `static public field` enabled
  },
  "settings": {
    "import/resolver": {
      "babel-plugin-root-import": { 
        "rootPathPrefix": "~",
        "rootPathSuffix": "src" 
      }
    }
  }
}
